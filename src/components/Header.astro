---
import Container from "./Container.astro";
import HeaderActions from "./HeaderActions.svelte";

const mainLinks = [
  {
    label: "👱 Tentang",
    href: "/",
  },
  {
    label: "✍️ Tulisan",
    href: "/posts",
  },
  {
    label: "🗒️ Resume",
    href: "/resume",
  },
];
---

<header class="py-5 bg-gradient-to-b from-primary/20">
  <Container
    class="flex md:items-center justify-between flex-col gap-6 md:flex-row"
  >
    <div class="flex items-center justify-between">
      <a href="/" class="font-bold text-2xl flex items-center gap-1.5">
        Adithya 👋
      </a>
      <HeaderActions class="md:hidden" popoverId="inbox-panel-mobile" />
    </div>
    <nav>
      <ul class="flex justify-center items-center gap-6">
        {
          mainLinks.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))
        }
      </ul>
    </nav>
    <HeaderActions class="hidden md:flex" popoverId="inbox-panel" />
  </Container>
</header>
