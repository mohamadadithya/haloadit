---
import GLightbox from "./GLightbox.svelte";
import MermaidRender from "./MermaidRender.astro";
import CodeblockRender from "./CodeblockRender.astro";

interface Props {
  slug: string;
  content: string;
}

const { content } = Astro.props;
---

<article class="prose max-w-none" set:html={content} />

<GLightbox client:only />
<MermaidRender />
<CodeblockRender />
