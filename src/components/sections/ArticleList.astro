---
import ArticleCard from "@components/article/ArticleCard.astro";
import Container from "@components/Container.astro";
---

<div class="py-10 min-h-dvh" id="writing">
  <Container>
    <h2 class="section-title mb-6">Tulisan Terbaru</h2>
    <div class="space-y-6">
      {Array.from({ length: 3 }, (_, i) => <ArticleCard />)}
      <button type="button" class="btn btn-soft btn-primary"
        >Lihat tulisan lainnya
      </button>
    </div>
  </Container>
</div>
