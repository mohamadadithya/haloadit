---
import Footer from "@/components/Footer.astro";
import Header from "@components/Header.svelte";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class=`${className} overflow-clip` aria-label="Base Layout">
  <Header client:load />
  <div class="py-6 pre-sm:py-8">
    <slot />
  </div>
  <Footer />
</div>
