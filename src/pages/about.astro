---
import Container from "@components/Container.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import Layout from "@layouts/Layout.astro";
import siteConfig from "@site-config";
import { Icon } from "astro-icon/components";
import { Schema } from "astro-seo-schema";

const paragraphs = [
  "Saya sangat suka membangun antarmuka web yang cepat, responsif, dan intuitif. Selain itu, saya juga berpengalaman dalam web design dan pengembangan aplikasi desktop, serta memastikan setiap produk fungsional dan nyaman digunakan.",
  "Selalu mencari tantangan baru untuk terus belajar, beradaptasi, dan menghadirkan solusi yang efektif dan efisienðŸš€.",
];

const cvFileUrl =
  "https://oobsgatmbpvrncgfqqjb.supabase.co/storage/v1/object/public/documents//Mohamad%20Adithya%20-%20CV.pdf";
---

<Layout>
  <Schema
    slot="head"
    item={{
      "@context": "https://schema.org",
      "@type": "WebPage",
      name: "Dari Baris Kode, ke Pengalaman Digital",
      description: "Perkenalan mengenai saya dan pengalaman saya",
      url: Astro.url.toString(),
      breadcrumb: {
        "@type": "BreadcrumbList",
        itemListElement: [
          {
            "@type": "ListItem",
            position: 1,
            name: "Beranda",
            item: siteConfig.origin,
          },
          {
            "@type": "ListItem",
            position: 2,
            name: "Tentang Saya",
            item: `${siteConfig.origin}/about`,
          },
        ],
      },
      about: {
        "@type": "Person",
        name: siteConfig.author,
        url: `${siteConfig.origin}/about`,
        description:
          "Saya adalah seorang frontend developer yang selalu antusias dengan pengembangan web modern.",
        jobTitle: "Frontend Developer",
        worksFor: {
          "@type": "Organization",
          name: "PT. Yapindo Jaya Abadi",
        },
        sameAs: [
          "https://github.com/mohamadadithya",
          "https://twitter.com/MohamadAdithya",
          "https://www.linkedin.com/in/mohamadadithya",
        ],
      },
    }}
  />
  <BaseLayout>
    <Container>
      <div class="space-y-6">
        <h1 class="section-title">
          Dari Baris Kode, <br />ke Pengalaman Digital
        </h1>
        {paragraphs.map((paragraph) => <p class="text-balance">{paragraph}</p>)}
      </div>
      <a
        href={cvFileUrl}
        download={cvFileUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary mt-5"
      >
        Unduh atau Buka CV Saya
        <Icon name="mdi:download" class="w-5 h-5 ml-2" />
      </a>
    </Container>
  </BaseLayout>
</Layout>
