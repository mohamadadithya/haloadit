---
export const prerender = false;

import Head from "@/components/Head.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Layout from "@/layouts/Layout.astro";
import siteConfig from "@/site.config";
import ArticleListWithFilter from "@/components/sections/ArticleListWithFilter.svelte";
import { Schema } from "astro-seo-schema";

const meta = {
  title: `Kumpulan Tulisan - ${siteConfig.name}`,
  description: `Baca berbagai tulisan Adit tentang teknologi, lifestyle, kreativitas, film, dan topik menarik lainnya. Temukan ide dan inspirasi terbaru setiap saat.`,
  image: `${siteConfig.origin}/images/banner/writings.png`,
};

const pageSize = 10;

const { url: astroUrl } = Astro;
---

<Layout>
  <Head
    slot="head"
    seoData={{
      title: meta.title,
      description: meta.description,
      openGraph: {
        basic: {
          type: "article",
          title: meta.title,
          image: meta.image,
        },
        optional: {
          description: meta.description,
        },
      },
      twitter: {
        title: meta.title,
        image: meta.image,
        description: meta.description,
      },
    }}
  />
  <Schema
    slot="head"
    item={{
      "@context": "https://schema.org",
      "@type": "WebPage",
      name: meta.title,
      url: astroUrl.href,
      description: meta.description,
      author: {
        "@type": "Person",
        name: siteConfig.author,
        url: `${siteConfig.origin}/#about`,
      },
      publisher: {
        "@type": "Organization",
        name: siteConfig.name,
        url: siteConfig.origin,
      },
      mainEntity: {
        "@type": "Person",
        name: siteConfig.author,
        url: `${siteConfig.origin}/#about`,
      },
    }}
  />
  <BaseLayout class="min-h-dvh">
    <ArticleListWithFilter client:load {pageSize} {meta} {astroUrl} />
  </BaseLayout>
</Layout>
