---
export const prerender = false;

import Head from "@/components/Head.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Layout from "@/layouts/Layout.astro";
import siteConfig from "@/site.config";
import ArticleListWithFilter from "@/components/sections/ArticleListWithFilter.svelte";
import { type SortOrder } from "@lib/contentful";
import { Schema } from "astro-seo-schema";
import type { PostListItem } from "@/types";

const meta = {
  title: `Kumpulan Tulisan - ${siteConfig.name}`,
  description: `Baca berbagai tulisan Adit tentang teknologi, lifestyle, kreativitas, film, dan topik menarik lainnya. Temukan ide dan inspirasi terbaru setiap saat.`,
  image: `${siteConfig.origin}/images/banner/writings.png`,
};

const pageSize = 10;
const skip = 0;

const { url: astroUrl } = Astro;
const current = {
  sort: (astroUrl.searchParams.get("sort") as SortOrder) ?? "descending",
  search: astroUrl.searchParams.get("search") ?? "",
  tag: astroUrl.searchParams.get("tag"),
};

const params = new URLSearchParams({
  query: current.search,
  limit: String(pageSize),
  skip: String(skip),
  tag: current.tag ?? "",
  order: current.sort ?? "descending",
  mode: "delivery",
});

const run = async () => {
  try {
    const res = await fetch(
      `${siteConfig.origin}/api/contentful/posts?${params.toString()}`
    );

    if (!res.ok) throw new Error(`HTTP ${res.status}`);

    const items = (await res.json()) as PostListItem[];

    const totalHeader =
      res.headers.get("X-Total") ?? res.headers.get("X-Total-Count");

    const total = Number(totalHeader ?? 0);

    return { items, total };
  } catch (e: unknown) {
    if (e instanceof DOMException && e.name === "AbortError") {
      return { items: [] as PostListItem[], total: 0 };
    }

    throw e;
  }
};

const { items: initialPosts } = await run();
---

<Layout>
  <Head
    slot="head"
    seoData={{
      title: meta.title,
      description: meta.description,
      openGraph: {
        basic: {
          type: "article",
          title: meta.title,
          image: meta.image,
        },
        optional: {
          description: meta.description,
        },
      },
      twitter: {
        title: meta.title,
        image: meta.image,
        description: meta.description,
      },
    }}
  />
  <Schema
    slot="head"
    item={{
      "@context": "https://schema.org",
      "@type": "WebPage",
      name: meta.title,
      url: astroUrl.href,
      description: meta.description,
      author: {
        "@type": "Person",
        name: siteConfig.author,
        url: `${siteConfig.origin}/#about`,
      },
      publisher: {
        "@type": "Organization",
        name: siteConfig.name,
        url: siteConfig.origin,
      },
      mainEntity: {
        "@type": "Person",
        name: siteConfig.author,
        url: `${siteConfig.origin}/#about`,
      },
    }}
  />
  <BaseLayout class="min-h-dvh">
    <ArticleListWithFilter
      client:load
      {initialPosts}
      {pageSize}
      {meta}
      {astroUrl}
    />
  </BaseLayout>
</Layout>
