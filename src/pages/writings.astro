---
export const prerender = false;

import Head from "@/components/Head.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Layout from "@/layouts/Layout.astro";
import siteConfig from "@/site.config";
import ArticleListWithFilter from "@/components/sections/ArticleListWithFilter.svelte";
import { getPosts, type SortOrder } from "@lib/contentful";
import { Schema } from "astro-seo-schema";
import type { PostListItem } from "@/types";

const meta = {
  title: `Kumpulan Tulisan - ${siteConfig.name}`,
  description: `Baca berbagai tulisan Adit tentang teknologi, lifestyle, kreativitas, film, dan topik menarik lainnya. Temukan ide dan inspirasi terbaru setiap saat.`,
  image: `${siteConfig.origin}/images/banner/writings.png`,
};

const pageSize = 10;
const skip = 0;

const { url: astroUrl } = Astro;
const current: {
  sort: SortOrder;
  search: string;
  tag: string | null;
} = {
  sort: (astroUrl.searchParams.get("sort") ?? "descending") as SortOrder,
  search: astroUrl.searchParams.get("search") ?? "",
  tag: astroUrl.searchParams.get("tag"),
};

const { items: initialPosts, total } = await getPosts({
  ...current,
  pageSize,
  skip,
  tag: current.tag,
  mode: "delivery",
});

const initialNextSkip =
  initialPosts.length === pageSize && pageSize < total
    ? skip + initialPosts.length
    : null;

const initialError: string | null = null;
---

<Layout>
  <Head
    slot="head"
    seoData={{
      title: meta.title,
      description: meta.description,
      openGraph: {
        basic: {
          type: "article",
          title: meta.title,
          image: meta.image,
        },
        optional: {
          description: meta.description,
        },
      },
      twitter: {
        title: meta.title,
        image: meta.image,
        description: meta.description,
      },
    }}
  />
  <Schema
    slot="head"
    item={{
      "@context": "https://schema.org",
      "@type": "WebPage",
      name: meta.title,
      url: astroUrl.href,
      description: meta.description,
      author: {
        "@type": "Person",
        name: siteConfig.author,
        url: `${siteConfig.origin}/#about`,
      },
      publisher: {
        "@type": "Organization",
        name: siteConfig.name,
        url: siteConfig.origin,
      },
      mainEntity: {
        "@type": "Person",
        name: siteConfig.author,
        url: `${siteConfig.origin}/#about`,
      },
    }}
  />
  <BaseLayout class="min-h-dvh">
    <ArticleListWithFilter
      client:load
      {initialPosts}
      {initialNextSkip}
      {initialError}
      {pageSize}
      {meta}
      {astroUrl}
    />
  </BaseLayout>
</Layout>
